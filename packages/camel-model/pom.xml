<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

  <modelVersion>4.0.0</modelVersion>

  <groupId>io.hawt</groupId>
  <artifactId>camel-model-generator</artifactId>
  <version>1.0</version>

  <properties>
    <version.org.apache.camel>3.20.2</version.org.apache.camel>

    <version.io.hawt.camel.catalog.maven.plugin>0.0.1</version.io.hawt.camel.catalog.maven.plugin>
    <version.org.codehaus.gmaven.plugin>2.1.1</version.org.codehaus.gmaven.plugin>

    <schema-outdir>./src</schema-outdir>
    <schema-file>index.ts</schema-file>

    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
  </properties>

  <dependencies>
    <dependency>
      <groupId>org.apache.camel</groupId>
      <artifactId>camel-catalog</artifactId>
      <version>${version.org.apache.camel}</version>
    </dependency>
  </dependencies>

  <build>
    <plugins>
      <plugin>
        <groupId>io.hawt</groupId>
        <artifactId>hawtio-camel-catalog-schema-generator-plugin</artifactId>
        <version>${version.io.hawt.camel.catalog.maven.plugin}</version>
        <executions>
          <execution>
            <id>generate-camel-model</id>
            <goals>
              <goal>generate-camel-model</goal>
            </goals>
            <configuration>
              <buildDir>.</buildDir>
              <schemaDir>${schema-outdir}</schemaDir>
              <schemaFileName>${schema-file}</schemaFileName>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.codehaus.gmaven</groupId>
        <artifactId>groovy-maven-plugin</artifactId>
        <version>${version.org.codehaus.gmaven.plugin}</version>
        <executions>
          <execution>
            <id>modify-camel-model</id>
            <goals>
              <goal>execute</goal>
            </goals>
            <phase>compile</phase>
            <configuration>
              <source>
                // Ensure camel model can be successfully parsed as typescript
                println("Converting index file to typescript")

                def file = new File("${schema-outdir}/${schema-file}")
                if (!file.exists()) {
                  fail("${schema-outdir}/${schema-file} does not exist!")
                }

                println("\tUpdating variable declarations")
                String typetext = file.text.replaceAll('var','const')

                println("\tRemoving semi-colons")
                typetext = typetext.replaceAll(';', '')

                file.write(typetext)
              </source>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>

</project>
