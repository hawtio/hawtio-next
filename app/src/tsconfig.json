{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      // with this alias, we can avoid errors in IDE (which reads tsconfig.json) without affecting webpack + swc,
      // which doesn't read this file.
      "static-remotes/*": [ "./examples/*" ]
    },
    "target": "esnext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "noEmit": true,
    "jsx": "react-jsx"
  }
}
